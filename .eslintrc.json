{
  "extends": ["airbnb-base", "eslint:recommended", "plugin:jest/recommended", "prettier"],
  "plugins": ["jest"],
  "rules": {
    "allowForLoopAfterthoughts": 0,
    "func-names": "off",
    "no-plusplus": 0,
    "no-unused-vars": "warn",
    "no-console": 0,
    "no-process-exit": 0,
    "no-param-reassign": 0,
    "no-restricted-syntax": 0,
    "no-lonely-if": 0,
    "max-classes-per-file": 0
  },
  "env": {
    "jest/globals": true
  }
}
